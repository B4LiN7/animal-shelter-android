<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/BreedItem_TextView_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breed Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BreedItem_TextView_Species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BreedItem_TextView_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Other Breed Data"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BreedItem_TextView_Name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BreedItem_Button_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Törlés"
        app:layout_constraintEnd_toStartOf="@id/BreedItem_Button_Edit"
        app:layout_constraintTop_toBottomOf="@id/BreedItem_TextView_Description" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BreedItem_Button_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szerkesztés"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BreedItem_TextView_Description" />

</androidx.constraintlayout.widget.ConstraintLayout>