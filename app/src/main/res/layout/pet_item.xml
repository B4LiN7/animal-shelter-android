<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/PetItem_ImageView_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/paw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PetItem_TextView_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pet Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PetItem_ImageView_Image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PetItem_TextView_Data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Other Pet Data"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/PetItem_TextView_Name"
        app:layout_constraintTop_toBottomOf="@id/PetItem_TextView_Name" />

    <Button
        android:id="@+id/PetItem_Button_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Törlés"
        app:layout_constraintEnd_toStartOf="@id/PetItem_Button_Edit"
        app:layout_constraintTop_toBottomOf="@id/PetItem_TextView_Data" />

    <Button
        android:id="@+id/PetItem_Button_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szerkesztés"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PetItem_TextView_Data" />

</androidx.constraintlayout.widget.ConstraintLayout>